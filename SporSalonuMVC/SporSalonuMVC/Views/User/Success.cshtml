@{
    ViewData["Title"] = "Kayıt Başarılı";
}

<div class="container mt-5">
    <div class="alert alert-success text-center shadow p-5 rounded-4">
        <h2 class="fw-bold mb-3">🎉 Tebrikler, kayıt işlemi tamamlandı!</h2>
        <p class="fs-5">Artık spor salonumuzun bir parçasısınız.</p>
        <p class="text-muted">Giriş yapmak için e-posta ve şifrenizi kullanabilirsiniz.</p>

        <a href="@Url.Action("Login", "User")" class="btn btn-primary px-4 mt-4 shadow-sm">
            🚪 Giriş Yap
        </a>
    </div>
</div>

@section Styles {
    <style>
        .alert-success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
        }

        .btn-primary {
            background-color: #ff7f50;
            border-color: #ff7f50;
        }

            .btn-primary:hover {
                background-color: #ff5722;
                border-color: #ff5722;
            }
    </style>
}
