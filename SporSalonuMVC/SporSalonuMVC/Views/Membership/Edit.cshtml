@model SporSalonuMVC.Models.Membership

@{
    ViewData["Title"] = "Paket Düzenle";
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-warning">
            <i class="fas fa-edit me-2"></i> Paket Düzenle
        </h2>
    </div>

    <form asp-action="Edit" method="post" class="border p-4 rounded shadow bg-white col-md-8 offset-md-2">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold text-dark">Paket Adı</label>
            <input asp-for="Name" class="form-control" placeholder="Örn: Öğrenci Üyeliği" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DurationDays" class="form-label fw-semibold text-dark">Süre (gün)</label>
            <input asp-for="DurationDays" class="form-control" min="1" placeholder="Örn: 30" />
            <span asp-validation-for="DurationDays" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label fw-semibold text-dark">Fiyat</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Örn: 1200" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-warning fw-bold me-2">
                <i class="fas fa-save me-1"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-1"></i> İptal
            </a>
        </div>
    </form>
</div>

<!-- Font Awesome CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
